<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="DEV_HOME" value="/var/log/applications" />

    <appender name="FILE-ROD" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DEV_HOME}/country_names.log</file>
        <append>true</append>
        <prudent>true</prudent>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${DEV_HOME}/country_names.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        
        <encoder>
       	    <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level - %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE-ROD" />
    </root>

</configuration>

